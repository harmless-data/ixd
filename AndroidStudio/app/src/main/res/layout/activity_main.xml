<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hintergrund_farbe">


    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/testText"
        android:layout_centerInParent="true"
        android:layout_marginBottom="100dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Welcome to your new shopping experience!"
        android:textColor="@color/dunkel_grau"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/testText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/poppins_semibold"
        android:text="TestTest"
        android:textColor="@color/hintergrund_farbe"
        android:textSize="24sp" />


    <TextView
        android:id="@+id/filter_wahl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/start_shopping_btn"
        android:layout_marginLeft="120dp"
        android:layout_marginBottom="60dp"
        android:fontFamily="@font/poppins_light"
        android:text="You chose the following filters: Palm-oil free, vegetarian, ecological und fair-trade."
        android:textColor="@color/dunkel_grau"
        android:textSize="24sp" />

    <Button
        android:id="@+id/start_shopping_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_text"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="5dp"
        android:background="@color/rosa_button"
        android:fontFamily="@font/poppins_semibold"
        android:padding="8dp"
        android:text="start shopping"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

</RelativeLayout>
