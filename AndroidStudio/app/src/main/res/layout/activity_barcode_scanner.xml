<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/hintergrund_farbe"

    xmlns:tools="http://schemas.android.com/tools">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Consumptuition.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.Consumptuition.AppBarOverlay"/>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/testText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/poppins_semibold"
        android:text="TestTest"
        android:textColor="@color/hintergrund_farbe"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/confirmation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:layout_above="@+id/testText"
        android:layout_marginBottom="100dp"
        android:text="Here you can scan your products."
        android:textColor="@color/dunkel_grau"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/ShoppingEnd_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/poppins_light"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:text="After scanning all of your products, you can end your shopping trip."
        android:textColor="@color/dunkel_grau"
        android:layout_above="@+id/end_shopping_btn"
        android:textSize="24sp" />

    <Button
        android:id="@+id/end_shopping_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/testText"
        android:layout_alignParentRight="true"
        android:layout_marginTop="100dp"
        android:layout_marginRight="460dp"
        android:background="@color/dunkel_grau"
        android:fontFamily="@font/poppins_semibold"
        android:padding="8dp"
        android:text="end shopping"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <Button
        android:id="@+id/scan_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ShoppingEnd_text"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:layout_marginRight="455dp"
        android:background="@color/dunkel_grau"
        android:fontFamily="@font/poppins_semibold"
        android:padding="8dp"
        android:text="Scan Product"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

</RelativeLayout>
